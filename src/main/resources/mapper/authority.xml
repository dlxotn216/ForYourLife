<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taesu.fyl.account.AccountDao">
    <select id="readAuthorities" resultType="AuthorityForSelect">
        SELECT auth_name FROM authority;
    </select>
    <select id="readAccountAuthById" resultType="AuthorityForSelect" parameterType="String">
        SELECT  * FROM  account_authority_mapping WHERE user_id=#{userId}
    </select>
</mapper>